<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>
        <item name="android:textAppearanceSmall">@style/AppTheme.Text.Small</item>
        <item name="android:textAppearanceLarge">@style/AppTheme.Text.Large</item>
        <item name="textAppearanceErrorMessage">@style/AppTheme.Text.ErrorMessage</item>
        <item name="textAppearanceErrorReason">@style/AppTheme.Text.ErrorReason</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textAppearanceListItemSmall">@style/AppTheme.Text.ListItem.Small</item>
        <item name="android:textAppearanceListItem">@style/AppTheme.Text.ListItem</item>
        <item name="textAppearanceListItemSecondary">@style/AppTheme.Text.ListItem.Secondary</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="dividerHorizontal">@color/dividerColor</item>
        <item name="android:listDivider">@color/dividerColor</item>
    </style>

    <style name="AppTheme.Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.Large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.ErrorMessage" parent="AppTheme.Text.Large">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Text.ErrorReason" parent="AppTheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/background_action_button</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:padding">@dimen/parent_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.EditText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.ListItem" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.ListItem.Secondary" parent="AppTheme.Text.ListItem">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.Text.ListItem.Small" parent="AppTheme.Text.ListItem">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="AppTheme.ListItem.Avatar" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/list_item_avatar_size</item>
        <item name="android:layout_height">@dimen/list_item_avatar_size</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
    </style>

</resources>
